{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/static/(.*)", "dest": "/dist/static/$1" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}
