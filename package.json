{
  "name": "mern-dev-setup",
  "private": true,
  "scripts": {
    "start": "concurrently -n mongo,api,web -c yellow,green,blue \"npm:start:mongo\" \"npm:start:server\" \"npm:start:client\"",
    "start:mongo": "brew services start mongodb-community@8.2 && echo 'âœ… MongoDB started (brew service)' && sleep 2",
    "start:server": "npm --prefix server run dev",
    "start:client": "npm --prefix client run dev",
    "stop:mongo": "brew services stop mongodb-community@8.2",
    "stop": "npm run stop:mongo"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
